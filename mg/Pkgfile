name=mg
version=20131118
release=1
source=(http://homepage.boetes.org/software/mg/mg-20131118.tar.gz)

build() {
    cd $name-$version

    CFLAGS=-I/usr/include/clens make
    make prefix=/usr DESTDIR=$PKG install 
}
