name=libotr
version=4.1.1
release=1
source=(https://otr.cypherpunks.ca/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr --mandir=/usr/man
	make DESTDIR=$PKG install
}
